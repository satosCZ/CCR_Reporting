@model Project_REPORT_v7.Models.MembersTable

@{ 
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="page-header">
        <h3>Login</h3>
    </div>
    <div class="form-horizontal">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.MemberID)
                    @Html.TextBoxFor(model => model.MemberID, "", new { @class="form-control", @placeholder = "90000xxx"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    @Html.PasswordFor(model => model.Password, new { @class="form-control",@placeholder = "Password"})
                </div>
                <div class="form-group">
                    <input type="submit" name="submit" class="btn btn-primary" value="Login" /> 
                </div>
            }
        <br />
        <div class="info">
            <p>Register: </p><a href="@Url.Action("Register", "Home")" class="alert-link">here</a>
        </div>


    </div>
</div>