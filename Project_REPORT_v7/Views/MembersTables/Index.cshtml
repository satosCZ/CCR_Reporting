@model IEnumerable<Project_REPORT_v7.Models.MembersTable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayName("Shift")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SetEmail)  
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShiftTable.ShiftName)
                @Html.HiddenFor(modelItem => item.ShiftTable.ShiftID)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.SetEmail)*@
                @Html.CheckBoxFor(modelItem => item.SetEmail, htmlAttributes: new {@class="form-control, disabled"})
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MemberID }) | 
                @Html.ActionLink("Delete", "Delete", new { id = item.MemberID })
            </td>
        </tr>
    }

</table>
