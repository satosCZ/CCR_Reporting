@model IEnumerable<Project_REPORT_v7.Models.MT_IMAGES>

@{  
    ViewBag.Title = "Gallery";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
    <h3 class="text-center">Gallery</h3>
</div>
<div class="modal-body" id="Time">
    <div>
        <div>
            <div>
                @Html.Display("Image")
            </div>
        </div>
        <div class="image_container">
            @foreach(var item in Model)
            {
                <div class="image">
                    <a class="nsbbox" href="@item.ImagePath" title="jQueryScript">
                        <img src="@item.ImagePath" alt="@item.ImageID" title="jQueryScript" class="crop img-thumbnail" loading="lazy" />
                    </a>
                </div>
            }
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</div>